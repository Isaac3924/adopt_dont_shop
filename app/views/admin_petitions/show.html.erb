<h1>Admin Petitions Page</h1>
<% if @petition.status != "Approved" %>
  <% if @pets != nil %>
    <% @pets.each do |pet| %>
      <% @petition_pets.each do |relation| %>
        <% if relation.id == pet.id %>
          <%= "#{pet.name}: " %>
          <% if relation.status != "Approved" || relation.status != "Rejected" %>
            <p><%= button_to "Approve: #{pet.name}", "/admin/petitions/#{@petition.id}/#{pet.id}", method: :patch %></p>
          <% elsif relation.status == "Approved" %>
            <p>Approved</p>
          <% elsif relation.status == "Rejected" %>
            <p>Rejected</p>
          <% else %>
            <p>ERROR</p>
          <% end %>
          <% if relation.status != "Approved" || relation.status != "Rejected" %>
            <p><%= button_to "Reject: #{pet.name}", "/admin/petitions/#{@petition.id}/#{pet.id}", method: :patch %></p>
          <% elsif relation.status == "Approved" %>
            <p>Approved</p>
          <% elsif relation.status == "Rejected" %>
            <p>Rejected</p>
          <% else %>
            <p>ERROR</p>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>